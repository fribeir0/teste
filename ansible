- name: Configurar Servidor Local (Update, Docker e Git)
  hosts: localhost
  become: yes
  connection: local

  tasks:

    - name: 1.1 - Atualizar o cache de pacotes (apt-get update)
      apt:
        update_cache: yes
      tags:
        - update

    - name: 1.2 - Atualizar todos os pacotes do sistema (apt-get upgrade)
      apt:
        upgrade: dist
      tags:
        - update

    - name: 2.1 - Instalar o Git
      apt:
        name: git
        state: present
      tags:
        - git

    - name: 3.1 - Instalar pacotes de pré-requisito para o Docker
      apt:
        name:
          - apt-transport-https
          - ca-certificates
          - curl
          - gnupg
          - lsb-release
        state: present
      tags:
        - docker

    - name: 3.2 - Adicionar a chave GPG oficial do Docker
      apt_key:
        url: https://download.docker.com/linux/ubuntu/gpg
        state: present
      tags:
        - docker

    - name: 3.3 - Adicionar o repositório do Docker ao sistema
      apt_repository:
        repo: "deb [arch=amd64] https://download.docker.com/linux/ubuntu {{ ansible_distribution_release }} stable"
        state: present
        filename: docker
      tags:
        - docker

    - name: 3.4 - Instalar o Docker Engine, CLI e Compose
      apt:
        name:
          - docker-ce
          - docker-ce-cli
